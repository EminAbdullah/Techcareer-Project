@model GameShop.Models.Game

@{
    ViewBag.Title = "Delete Game";
}

<h1 class="display-4 mb-4" style="text-decoration: underline;">Delete Game</h1>

<h3>Are you sure you want to delete this game?</h3>
<div>
    <h4>@Model.DisplayName</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Developer
        </dt>
        <dd class="col-sm-10">
            @Model.Developer
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>